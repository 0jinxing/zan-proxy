{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2017",
        "sourceRoot": "./src",
        "sourceMap": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "outDir": "bin",
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "exclude": [
        "bin",
        "localkv"
    ]
}