{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2017",
        "sourceRoot": "./src",
        "sourceMap": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "module": "commonjs",
        "outDir": "lib",
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "exclude": [
        "lib"
    ]
}